{{#each this}}
<li class="film-list-item">
  <div class="film-card">
    <img class="film-picture" data-index="{{@index}}" src="https://image.tmdb.org/t/p/w500{{poster_path}}"
      alt="film card" />
  </div>
  <div class="film-info">

    <h2 class="film-name">{{title}}</h2>

    <div class="film-info-wrap">
      <p class="film-genre">{{genre_ids}}</p>
      <span class="film-info-mark">|</span>

      <p class="film-year">{{release_date}}</p>
      <span class="vote">{{vote_average}}</span>
    </div>
  </div>
</li>
{{/each}}